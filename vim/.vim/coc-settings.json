{
    "eslint.options": {
        "configFile": ".eslintrc.js"
    },
    "eslint.autoFixOnSave": true,
      "languageserver": {
        "ccls": {
            "command": "ccls",
            "args": [
                "--log-file=/tmp/ccls.log",
                "-v=1"
            ],
            "filetypes": [
                "c",
                "cc",
                "cpp",
                "c++",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "client": {
                    "snippetSupport": true
                }
            }
        }
      },
    "clangd.semanticHighlighting": true,
    "python.setLinter": "flake8"
}
