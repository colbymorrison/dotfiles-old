[bar/top]
monitor = ${env:AUTORANDR_MONITORS:eDP1} 
width = 100%
height = 3% 

background = #00000000
foreground = #ccffffff

line-color = ${self.background}
line-size = 5 

spacing = 2
padding-right = 5
module-margin = 4

font-0 = ${env:NOTOT}
font-1 = ${env:MATRT}
font-2 = ${env:TERMST}
font-3 = ${env:AWST}

modules-left = powermenu mpd i3
modules-right = pulseaudio backlight wireless-network wired-network battery date

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

enable-ipc = true

[bar/bottom]
monitor = ${env:AUTORANDR_MONITORS:eDP1}
