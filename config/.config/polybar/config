[module/bspwm]
type = internal/bspwm

format = <label-state> 

pad = 2

label-focused = %name%
label-focused-foreground = ${colors.primary}
label-focused-padding = ${self.pad}

label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = ${self.pad}

label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-padding = ${self.pad}

label-empty = 
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = ${self.pad}

label-separator =   
label-separator-padding = 0
label-separator-foreground = ${colors.foreground}

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_03.0.hdmi-stereo-extra1

format-volume = <ramp-volume> <label-volume>
label-volume = %{T0}%{A3:pavucontrol &:}%percentage%%%{A}
label-volume-foreground = ${colors.foreground}

label-muted = 
label-muted-foreground = ${colors.foreground}

ramp-volume-0 = " " 
ramp-volume-1 = " "
ramp-volume-2 = " "

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 1

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 1

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = ${env:HWMON}

base-temperature = 40
warn-temperature = 80

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = #f00

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "

[module/power]
type = custom/script
exec = echo 
click-left = ~/scripts/polybar-scripts/rofi-power.sh

[module/spotify]
type = custom/script
interval = 1
format-prefix = "  "
format = <label>
exec = python ~/scripts/polybar-scripts/spotify_status.py -t 10 -f '{artist}  -  {song}'


