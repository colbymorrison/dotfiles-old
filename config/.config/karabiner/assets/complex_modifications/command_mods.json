{
    "title": "Command / Control ",
    "rules": [
        {
            "description": "swap left control and left command except for iTerm and VsCode",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com.googlecode.iterm2",
                                "^com.facebook.fbvscode"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control"
                    },
                    "to": [
                        {
                            "key_code": "left_command"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_unless",
                            "bundle_identifiers": [
                                "^com.googlecode.iterm2",
                                "^com.facebook.fbvscode"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "map option-q to command-q except for internal keyboard",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "q",
                            "modifiers": [
                                "command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_unless",
                            "identifiers": [
                                {
                                    "vendor_id": 1452,
                                    "product_id": 832,
                                    "description": "Apple internal keyboard"
                                } 
                            ]
                        }
                    ]
                }
            ]
        },
